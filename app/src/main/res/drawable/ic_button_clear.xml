<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:drawable="@drawable/bkg_effect_button_active"
                android:top="@dimen/effectButtonBackgroundPaddingVertical"
                android:bottom="@dimen/effectButtonBackgroundPaddingVertical"
                android:left="@dimen/effectButtonBackgroundPaddingHorizontal"
                android:right="@dimen/effectButtonBackgroundPaddingHorizontal"/>
            <item android:drawable="@drawable/ic_sun"/>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:drawable="@drawable/bkg_effect_button_inactive"
                android:top="@dimen/effectButtonBackgroundPaddingVertical"
                android:bottom="@dimen/effectButtonBackgroundPaddingVertical"
                android:left="@dimen/effectButtonBackgroundPaddingHorizontal"
                android:right="@dimen/effectButtonBackgroundPaddingHorizontal"/>
            <item android:drawable="@drawable/ic_sun"/>
        </layer-list>
    </item>
</selector>