            <item android:drawable="@drawable/bkg_effect_button_full_active"  android:bottom="@dimen/effectButtonBackgroundPaddingVertical" android:left="@dimen/effectButtonBackgroundPaddingHorizontal" android:right="@dimen/effectButtonBackgroundPaddingHorizontal" android:top="@dimen/effectButtonBackgroundPaddingVertical"  />
