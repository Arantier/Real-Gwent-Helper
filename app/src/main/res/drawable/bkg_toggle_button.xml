<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="false">
        <shape>
            <solid android:color="@color/buttonOffColor" />
            <corners android:radius="@dimen/effectButtonCornerRadius" />
        </shape>
    </item>

    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/buttonOnColor" />
            <corners android:radius="@dimen/effectButtonCornerRadius" />
        </shape>
    </item>

</selector>