<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="android:colorButtonNormal">@color/buttonColor</item>
    </style>

    <style name="scoreTextStyle" parent="AppTheme">
        <item name="android:textSize">@dimen/summaryScoreTextSize</item>
        <item name="android:textColor">@color/scoreTextColor</item>
    </style>

    <style name="effectButtonDefaultStyle" parent="AppTheme">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@drawable/sel_class_button</item>
        <item name="android:layout_margin">@dimen/effectButtonMargin</item>
        <item name="android:layout_height">@dimen/effectButtonEffectHeight</item>
    </style>

    <style name="hornButtonDefaultStyle" parent="effectButtonDefaultStyle">
        <item name="android:background">@drawable/bkg_horn_button</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
        <item name="android:textOn" />
        <item name="android:textOff" />
    </style>

    <style name="rowImageStyle">
        <item name="android:tint">@color/classIconColor</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

</resources>
