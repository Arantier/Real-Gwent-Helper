<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/buttonFrost"
        android:layout_width="@dimen/weatherButtonWidth"
        android:layout_height="@dimen/weatherButtonHeight"
        android:layout_marginLeft="@dimen/weatherButtonMarginHorizontal"
        android:layout_marginRight="@dimen/weatherButtonMarginHorizontal"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/buttonClose"
        app:layout_constraintEnd_toStartOf="@+id/buttonFog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/frost" />

    <ImageView
        android:id="@+id/buttonFog"
        android:layout_width="@dimen/weatherButtonWidth"
        android:layout_height="@dimen/weatherButtonHeight"
        android:layout_marginLeft="@dimen/weatherButtonMarginHorizontal"
        android:layout_marginRight="@dimen/weatherButtonMarginHorizontal"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/buttonFrost"
        app:layout_constraintEnd_toStartOf="@+id/buttonRain"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonFrost"
        app:layout_constraintTop_toTopOf="@+id/buttonFrost"
        app:srcCompat="@drawable/fog" />

    <ImageView
        android:id="@+id/buttonRain"
        android:layout_width="@dimen/weatherButtonWidth"
        android:layout_height="@dimen/weatherButtonHeight"
        android:layout_marginLeft="@dimen/weatherButtonMarginHorizontal"
        android:layout_marginRight="@dimen/weatherButtonMarginHorizontal"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/buttonFrost"
        app:layout_constraintEnd_toStartOf="@+id/buttonStorm"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonFog"
        app:layout_constraintTop_toTopOf="@+id/buttonFrost"
        app:srcCompat="@drawable/rain" />

    <ImageView
        android:id="@+id/buttonStorm"
        android:layout_width="@dimen/weatherButtonWidth"
        android:layout_height="@dimen/weatherButtonHeight"
        android:layout_marginLeft="@dimen/weatherButtonMarginHorizontal"
        android:layout_marginRight="@dimen/weatherButtonMarginHorizontal"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/buttonFrost"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonRain"
        app:layout_constraintTop_toTopOf="@+id/buttonFrost"
        app:srcCompat="@drawable/storm" />

    <Button
        android:id="@+id/buttonClose"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/title_close"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>