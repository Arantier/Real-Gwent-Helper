<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/cardItemMargin"
    android:layout_marginRight="@dimen/cardItemMargin"
    android:layout_marginTop="@dimen/cardItemMargin"
    android:layout_marginBottom="@dimen/cardItemMargin">

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="@dimen/cardItemSize"
        android:layout_height="@dimen/cardItemSize"
        android:scaleType="fitXY"
        tools:srcCompat="@drawable/ic_card_unit_buff_active" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="@dimen/cardUsualTextSize"
        style="@style/scoreCardStyle"
        tools:text="+" />
</FrameLayout>