<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/secondPlayerLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:rotation="180"
        android:textColor="@color/secondPlayerColor"
        app:layout_constraintBottom_toTopOf="@+id/middlePanel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/secondPlayerSiege"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/buttonSecondPlayerPass"
            app:layout_constraintEnd_toStartOf="@+id/secondPlayerArchery"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ToggleButton
                android:id="@+id/buttonSecondPlayerHornInfantry"
                android:layout_width="0dp"
                android:layout_height="@dimen/hornSize"
                style="@style/hornButtonDefaultStyle"
                android:background="@drawable/ic_button_horn"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/pickerSecondPlayerInfantry" />

            <com.shawnlin.numberpicker.NumberPicker
                android:id="@+id/pickerSecondPlayerInfantry"
                style="@style/secondPlayerScorePickerStyle"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/buttonSecondPlayerHornInfantry"/>

            <ImageView
                android:id="@+id/imageView"
                style="@style/classImageStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_siege"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/secondPlayerArchery"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/buttonSecondPlayerPass"
            app:layout_constraintEnd_toStartOf="@+id/secondPlayerInfantry"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/secondPlayerSiege"
            app:layout_constraintTop_toTopOf="parent">

            <ToggleButton
                android:id="@+id/buttonSecondPlayerHornArchery"
                android:layout_width="0dp"
                android:layout_height="@dimen/hornSize"
                style="@style/hornButtonDefaultStyle"
                android:background="@drawable/ic_button_horn"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/pickerSecondPlayerArchery" />

            <com.shawnlin.numberpicker.NumberPicker
                android:id="@+id/pickerSecondPlayerArchery"
                style="@style/secondPlayerScorePickerStyle"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/buttonSecondPlayerHornArchery"/>

            <ImageView
                style="@style/classImageStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_archery"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/secondPlayerInfantry"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/buttonSecondPlayerPass"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/secondPlayerArchery"
            app:layout_constraintTop_toTopOf="parent">

            <ToggleButton
                android:id="@+id/buttonSecondPlayerHornSiege"
                android:layout_width="0dp"
                android:layout_height="@dimen/hornSize"
                style="@style/hornButtonDefaultStyle"
                android:background="@drawable/ic_button_horn"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/pickerSecondPlayerSiege" />

            <com.shawnlin.numberpicker.NumberPicker
                android:id="@+id/pickerSecondPlayerSiege"
                style="@style/secondPlayerScorePickerStyle"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/buttonSecondPlayerHornSiege"/>

            <ImageView
                style="@style/classImageStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_infantry"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/buttonSecondPlayerPass"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/title_button_pass"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/middlePanel"
        android:layout_width="0dp"
        android:layout_height="@dimen/middlePanelHeight"
        app:layout_constraintBottom_toTopOf="@+id/firstPlayerLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondPlayerLayout">

        <ImageButton
            android:id="@+id/buttonReset"
            android:layout_width="@dimen/middlePanelButtonSize"
            android:layout_height="@dimen/middlePanelButtonSize"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_finish" />

        <ImageView
            android:id="@+id/imageSecondPlayerGem2"
            android:layout_width="@dimen/gemSize"
            android:layout_height="@dimen/gemSize"
            android:layout_marginStart="@dimen/gemMarginHorizontal"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/buttonReset"
            app:layout_constraintTop_toBottomOf="@+id/imageSecondPlayerGem1"
            app:srcCompat="@mipmap/ic_gem_empty" />

        <ImageView
            android:id="@+id/imageSecondPlayerGem1"
            android:layout_width="@dimen/gemSize"
            android:layout_height="@dimen/gemSize"
            android:layout_marginStart="12dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toTopOf="@+id/imageSecondPlayerGem2"
            app:layout_constraintStart_toEndOf="@+id/buttonReset"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_gem_empty" />

        <ImageView
            android:id="@+id/imageFirstPlayerGem1"
            android:layout_width="@dimen/gemSize"
            android:layout_height="@dimen/gemSize"
            android:layout_marginRight="@dimen/gemMarginHorizontal"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/buttonWeather"
            app:layout_constraintTop_toBottomOf="@+id/imageFirstPlayerGem2"
            app:srcCompat="@mipmap/ic_gem_empty" />

        <ImageView
            android:id="@+id/imageFirstPlayerGem2"
            android:layout_width="@dimen/gemSize"
            android:layout_height="@dimen/gemSize"
            android:layout_marginEnd="@dimen/gemMarginHorizontal"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toTopOf="@+id/imageFirstPlayerGem1"
            app:layout_constraintEnd_toStartOf="@+id/buttonWeather"
            app:layout_constraintRight_toLeftOf="@id/imageFirstPlayerGem1"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_gem_empty" />

        <ImageButton
            android:id="@+id/buttonWeather"
            android:layout_width="@dimen/middlePanelButtonSize"
            android:layout_height="@dimen/middlePanelButtonSize"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_weather" />

        <TextView
            android:id="@+id/textFirstPlayerScore"
            style="@style/scoreTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/gemMarginHorizontal"
            app:layout_constraintBottom_toTopOf="@+id/textFirstPlayerScoreInversed"
            app:layout_constraintRight_toLeftOf="@+id/imageFirstPlayerGem1"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="0" />

        <TextView
            android:id="@+id/textFirstPlayerScoreInversed"
            style="@style/scoreTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rotation="180"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textFirstPlayerScore"
            app:layout_constraintTop_toBottomOf="@+id/textFirstPlayerScore"
            tools:text="0"  />

        <TextView
            android:id="@+id/textSecondPlayerScore"
            style="@style/scoreTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/gemMarginHorizontal"
            app:layout_constraintBottom_toTopOf="@+id/textSecondPlayerScoreInversed"
            app:layout_constraintStart_toEndOf="@+id/imageSecondPlayerGem1"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="0" />

        <TextView
            android:id="@+id/textSecondPlayerScoreInversed"
            style="@style/scoreTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rotation="180"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textSecondPlayerScore"
            app:layout_constraintTop_toBottomOf="@+id/textSecondPlayerScore"
            tools:text="0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/firstPlayerLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/middlePanel">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/firstPlayerInfantry"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/buttonFirstPlayerPass"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/firstPlayerArchery"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/firstPlayerArchery"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ToggleButton
                android:id="@+id/buttonFirstPlayerHornInfantry"
                android:layout_width="0dp"
                android:layout_height="@dimen/hornSize"
                style="@style/hornButtonDefaultStyle"
                android:background="@drawable/ic_button_horn"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/pickerFirstPlayerInfantry" />

            <com.shawnlin.numberpicker.NumberPicker
                android:id="@+id/pickerFirstPlayerInfantry"
                style="@style/secondPlayerScorePickerStyle"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/buttonFirstPlayerHornInfantry"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/imageView2"
                style="@style/classImageStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_infantry"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/firstPlayerArchery"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/buttonFirstPlayerPass"
            app:layout_constraintEnd_toStartOf="@+id/firstPlayerSiege"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/firstPlayerInfantry"
            app:layout_constraintTop_toTopOf="parent">

            <ToggleButton
                android:id="@+id/buttonFirstPlayerHornArchery"
                android:layout_width="0dp"
                android:layout_height="@dimen/hornSize"
                style="@style/hornButtonDefaultStyle"
                android:background="@drawable/ic_button_horn"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/pickerFirstPlayerArchery" />

            <com.shawnlin.numberpicker.NumberPicker
                android:id="@+id/pickerFirstPlayerArchery"
                style="@style/secondPlayerScorePickerStyle"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/buttonFirstPlayerHornArchery"/>

            <ImageView
                style="@style/classImageStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_archery"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/firstPlayerSiege"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/buttonFirstPlayerPass"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/firstPlayerArchery"
            app:layout_constraintTop_toTopOf="parent">

            <ToggleButton
                android:id="@+id/buttonFirstPlayerHornSiege"
                android:layout_width="0dp"
                android:layout_height="@dimen/hornSize"
                style="@style/hornButtonDefaultStyle"
                android:background="@drawable/ic_button_horn"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/pickerFirstPlayerSiege" />


            <com.shawnlin.numberpicker.NumberPicker
                android:id="@+id/pickerFirstPlayerSiege"
                style="@style/secondPlayerScorePickerStyle"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/buttonFirstPlayerHornSiege"/>

            <ImageView
                style="@style/classImageStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_siege"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/buttonFirstPlayerPass"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/title_button_pass"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>